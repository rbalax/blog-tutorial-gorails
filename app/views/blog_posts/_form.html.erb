<%= form_with model: blog_post do |form| %>
<% if form.object.errors.any?%>
<h1 style="color: red;"><%=  form.object.errors.full_messages.join(" & ") %></h1>
<% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter title" %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body, placeholder: "Enter body" %>
  </div>

  <%= form.submit "Submit" %>
<% end %>
