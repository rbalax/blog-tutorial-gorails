<%= form_with model: blog_post do |form| %>
<% if form.object.errors.any?%>
<h1 style="color: red;"><%=  form.object.errors.full_messages.join(" & ") %></h1>
<% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter title" %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.rich_text_area :content, placeholder: "Enter content" %>
  </div>

  <div>
    <%= form.label :published_at %>
    <%= form.datetime_select :published_at, include_blank: true%>
  </div>

  <%= form.submit "Submit" %>
<% end %>
